.go_build_inject:
  stage: build
  artifacts:
    expire_in: 30m
    paths:
      - build/checker
  script:
    - apk update && apk add git openssh gcc musl-dev
    - go build -v -x -o build/${BINARY_NAME} -ldflags \
      "-X my/checker/config.Version=${CI_COMMIT_REF_NAME} -X my/checker/config.VersionSHA=${CI_COMMIT_SHORT_SHA} -X my/checker/config.VersionBuild=${CI_JOB_ID}"
  only:
    variables:
      - $INJECT_VERSION == "true"

go inject linux:
  variables:
    GOOS: "linux"
  extends:
    - .go_build_inject
    - .docker_europe_tags
    - .go_image

dev instance:
  script:
    - /bin/true

go tests:
  script:
    - /bin/true
