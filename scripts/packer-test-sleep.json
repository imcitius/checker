{
  "variables": {
    "docker_image": "{{env `REGISTRY_IMAGE`}}",
    "docker_tag": "{{env `REGISTRY_TAG`}}",
    "docker_user": "{{env `REGISTRY_USER`}}",
    "docker_pass": "{{env `REGISTRY_PASSWORD`}}",
    "docker_server": "{{env `REGISTRY_URL`}}",
    "binary_name": "{{env `BINARY_NAME`}}"
  },
  "builders": [
    {
      "name": "alpine",
      "type": "docker",
      "image": "alpine",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"],
      "commit": "true",
      "privileged": "false",
      "changes": [
        "WORKDIR /app",

        "ENTRYPOINT /bin/sh",
        "CMD [\"-c\",\"sleep 10000\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir -p /app", "apk update", "apk add ca-certificates"]
    },
    {
      "type": "file",
      "source": "build/{{user `binary_name`}}",
      "destination": "/app/{{user `binary_name`}}"
    },
    {
      "type": "file",
      "source": "scripts/null-ca.pem",
      "destination": "/usr/local/share/ca-certificates/ca.crt"
    },
    {
      "type": "shell",
      "inline": ["update-ca-certificates"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_image`}}",
        "tag": "{{user `docker_tag`}}"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "{{user `docker_user`}}",
        "login_password": "{{user `docker_pass`}}",
        "login_server": "{{user `docker_server`}}"
      }
    ]
  ]
}
