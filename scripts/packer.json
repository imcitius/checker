{
  "variables": {
    "docker_image": "{{env `REGISTRY_IMAGE`}}",
    "docker_tag": "{{env `REGISTRY_TAG`}}",
    "docker_user": "{{env `REGISTRY_USER`}}",
    "docker_pass": "{{env `REGISTRY_PASSWORD`}}",
    "docker_server": "{{env `REGISTRY_URL`}}",
    "binary_name": "{{env `BINARY_NAME`}}"
  },
  "builders": [
    {
      "name": "centos",
      "type": "docker",
      "image": "centos",
      "commit": "true",
      "privileged": "false",
      "changes": [
        "WORKDIR /app",
        "CMD /app/{{user `binary_name`}}"
      ]
    },
    {
      "name": "alpine",
      "type": "docker",
      "image": "alpine",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"],
      "commit": "true",
      "privileged": "false",
      "changes": [
        "WORKDIR /app",
        "CMD /app/{{user `binary_name`}}"
      ]
    }
  ],
  "provisioners": [
    {
      "only": ["centos"],
      "type": "shell",
      "inline": [
        "yum clean all",
        "yum install -y --nogpgcheck epel-release",
        "yum install -y --nogpgcheck mc nano",
        "yum clean all"
      ]
    },
    {
      "type": "shell",
      "inline": ["mkdir -p /app"]
    },
    {
      "type": "file",
      "source": "build/{{user `binary_name`}}",
      "destination": "/app/{{user `binary_name`}}"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_image`}}",
        "tag": "{{user `docker_tag`}}"
      },
      {
        "type": "docker-push",
        "login": "true",
        "login_username": "{{user `docker_user`}}",
        "login_password": "{{user `docker_pass`}}",
        "login_server": "{{user `docker_server`}}"
      }
    ]
  ]
}